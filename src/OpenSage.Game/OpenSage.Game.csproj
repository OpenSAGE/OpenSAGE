<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>OpenSage</RootNamespace>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.Win32.Registry" Version="4.4.0" />
    <PackageReference Include="OpenAL-CS" Version="1.0.11" />
    <PackageReference Include="SixLabors.ImageSharp" Version="1.0.0-dev002203" />
    <PackageReference Include="SixLabors.ImageSharp.Drawing" Version="1.0.0-dev002203" />
    <PackageReference Include="System.Text.Encoding.CodePages" Version="4.5.0" />
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
    <PackageReference Include="Veldrid" Version="$(VeldridVersion)" />
    <PackageReference Include="Veldrid.ImageSharp" Version="$(VeldridVersion)" />
    <PackageReference Include="Veldrid.SDL2" Version="$(VeldridVersion)" />
    <PackageReference Include="Veldrid.StartupUtilities" Version="$(VeldridVersion)" />
    <PackageReference Include="Veldrid.SPIRV" Version="1.0.3" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Content\Fonts\*.ttf" />
  </ItemGroup>

  <ItemGroup>
    <ShaderFiles Include="Assets\Shaders\*.vert;Assets\Shaders\*.frag" />
    <UpToDateCheckInput Include="@(ShaderFiles)" />
    
    <ShaderHeaderFiles Include="Assets\Shaders\*.h" />
    <UpToDateCheckInput Include="@(ShaderHeaderFiles)" />
  </ItemGroup>

  <PropertyGroup>
    <GlslangValidatorPath>win-x64\glslangValidator.exe</GlslangValidatorPath>
    <GlslangValidatorPath Condition="$([MSBuild]::IsOsPlatform('osx'))">osx-x64\glslangValidator</GlslangValidatorPath>

    <SpirvCrossPath>win-x64\SPIRV-Cross.exe</SpirvCrossPath>
    <SpirvCrossPath Condition="$([MSBuild]::IsOsPlatform('osx'))">osx-x64\spirv-cross</SpirvCrossPath>
  </PropertyGroup>

  <Target Name="CompileShaders" BeforeTargets="BeforeBuild" Inputs="@(ShaderFiles);@(ShaderHeaderFiles)" Outputs="@(ShaderFiles->'$(IntermediateOutputPath)Assets\Shaders\%(FileName)%(Extension).spv');@(ShaderFiles->'$(IntermediateOutputPath)Assets\Shaders\%(FileName)%(Extension).json')">
    <MakeDir Directories="$(IntermediateOutputPath)Assets\Shaders" />
    <Exec Command="$(MSBuildThisFileDirectory)..\..\lib\$(GlslangValidatorPath) -I'.' -V %(ShaderFiles.Identity) -o $(IntermediateOutputPath)Assets\Shaders\%(ShaderFiles.FileName)%(ShaderFiles.Extension).spv" />
    <Exec Command="$(MSBuildThisFileDirectory)..\..\lib\$(SpirvCrossPath) --output $(IntermediateOutputPath)Assets\Shaders\%(ShaderFiles.FileName)%(ShaderFiles.Extension).json $(IntermediateOutputPath)%(ShaderFiles.Identity).spv --reflect" />
  </Target>

  <Target Name="EmbedShaders" AfterTargets="CompileShaders">
    <ItemGroup>
      <CompiledShaderFiles Include="$(IntermediateOutputPath)Assets\Shaders\*.*" />
      <EmbeddedResource Include="@(CompiledShaderFiles)">
        <LogicalName>OpenSage.Assets.Shaders.%(FileName)%(Extension)</LogicalName>
      </EmbeddedResource>
    </ItemGroup>
  </Target>
</Project>